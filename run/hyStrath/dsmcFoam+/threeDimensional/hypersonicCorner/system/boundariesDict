			      velocity 			(0 0 0);
         }
     }


    boundary
    {
        patchBoundaryProperties
        {
            patchName                           flow;
        }

        boundaryModel   dsmcDeletionPatch;

        dsmcDeletionPatchProperties
        {
	          allSpecies		yes;
        }
    }

);

