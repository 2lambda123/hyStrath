FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      Tt;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "include/initialConditions"

dimensions      [0 0 0 1 0 0 0];

internalField   uniform $Ttr;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform $Ttr;
    }
    outlet
    {
        type            zeroGradient;
    }
    bottom
    {
        type            symmetry;
    }
    top
    {
        type            zeroGradient;
    }
    plate
    {
        type            fixedValue;
        value           uniform $Tplate;
    }
    frontAndBack
    {
        type            empty;
    }
}

